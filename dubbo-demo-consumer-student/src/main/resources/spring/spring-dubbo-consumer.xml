<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<import resource="classpath:spring/spring-context.xml"/>
	
	<dubbo:application name="dubbo-student-consumer" />
  
    <!-- 使用zookeeper注册中心暴露服务地址 -->  
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />  
    <!-- 生成远程服务代理，可以像使用本地bean一样使用studentProvider -->
    
    <dubbo:reference id="studentProvider" interface="dubbo.demo.provider.student.service.StudentProvider" timeout="6000" retries="0"/>
</beans>
